@using OutlookBlazorTestApp2.Data.Models
@inject EmailContextService EmailService
@inject HttpClient Http
@inject IJSRuntime Js
@inject NavigationManager Nav

<div class="card p-3">
    <h5>AutoLink</h5>

    @if (Loading)
    {
        <div>Loading email context...</div>
    }
    else if (EmailCtx is null)
    {
        <div class="alert alert-warning">
            No email context available. Make sure this task pane is opened inside Outlook and Office.js is loaded.
        </div>
        <button class="btn btn-primary" @onclick="LoadEmail">Try load email</button>
    }
    else
    {
        <div>
            <strong>Subject:</strong> @EmailCtx.Subject <br />
            <strong>From:</strong> @EmailCtx.FromName (@EmailCtx.From) <br />
        </div>

        <div class="mt-2">
            <button class="btn btn-outline-primary me-2" @onclick="FindMatches">Find Matches</button>
            <button class="btn btn-outline-success" @onclick="CreateNew">Create New Contact</button>
        </div>

        @if (Matching)
        {
            <div class="mt-2">Searching for matching records...</div>
        }

        @if (Matches?.Any() == true)
        {
            <h6 class="mt-3">Possible matches</h6>
            <ul class="list-group">
                @foreach (var m in Matches)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>@m.Name</strong> <small class="text-muted">(@m.EntityType)</small>
                            <div><small>@m.PrimaryEmail</small></div>
                        </div>
                        <div class="text-end">
                            <div><span class="badge bg-secondary">Score: @Math.Round(m.Score, 2)</span></div>
                            <div class="mt-1">
                                <button class="btn btn-sm btn-primary me-1" @onclick="() => LinkMatch(m)">Link</button>
                                <button class="btn btn-sm btn-link" @onclick="() => OpenRecord(m)">Open</button>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        }

        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="alert alert-danger mt-2">@ErrorMessage</div>
        }
    }
</div>

@code {
    [Parameter] public EventCallback<CrmRecord> OnRecordLinked { get; set; }
    [Parameter] public EventCallback OnCreateNewRecord { get; set; }

    private bool Loading = true;
    private bool Matching = false;
    private EmailContext? EmailCtx;
    private List<MatchResult>? Matches;
    private string ErrorMessage = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadEmail();
    }

    private async Task LoadEmail()
    {
        Loading = true;
        StateHasChanged();
        try
        {
            EmailCtx = await EmailService.GetActiveEmailFromOutlookAsync();
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Failed to load email: {ex.Message}";
        }
        finally
        {
            Loading = false;
            StateHasChanged();
        }
    }

    private async Task FindMatches()
    {
        if (EmailCtx == null) return;
        Matching = true;
        Matches = null;
        ErrorMessage = "";
        StateHasChanged();

        try
        {
            var resp = await Http.PostAsJsonAsync("api/autolink/match", EmailCtx);
            if (resp.IsSuccessStatusCode)
            {
                Matches = await resp.Content.ReadFromJsonAsync<List<MatchResult>>();
            }
            else
            {
                var text = await resp.Content.ReadAsStringAsync();
                ErrorMessage = "Match failed: " + text;
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = "Error finding matches: " + ex.Message;
        }
        finally
        {
            Matching = false;
            StateHasChanged();
        }
    }

    private async Task LinkMatch(MatchResult match)
    {
        if (EmailCtx == null || match == null) return;

        var req = new LinkRequest
        {
            EmailContext = EmailCtx,
            TargetEntityType = match.EntityType,
            TargetRecordId = match.Id
        };

        try
        {
            var resp = await Http.PostAsJsonAsync("api/autolink/link", req);
            if (resp.IsSuccessStatusCode)
            {
                var result = await resp.Content.ReadFromJsonAsync<LinkResult>();
                await Js.InvokeVoidAsync("alert", result?.Message ?? "Linked");
                if (OnRecordLinked.HasDelegate)
                {
                    await OnRecordLinked.InvokeAsync(new CrmRecord { Id = match.Id, Name = match.Name });
                }
            }
            else
            {
                var text = await resp.Content.ReadAsStringAsync();
                ErrorMessage = "Link failed: " + text;
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = "Error linking record: " + ex.Message;
        }
    }

    private void CreateNew()
    {
        if (OnCreateNewRecord.HasDelegate)
        {
            OnCreateNewRecord.InvokeAsync();
        }
        else
        {
            Nav.NavigateTo("/contacts/add");
        }
    }

    private void OpenRecord(MatchResult m)
    {
        Nav.NavigateTo($"/{m.EntityType.ToLower()}/{m.Id}");
    }
}
