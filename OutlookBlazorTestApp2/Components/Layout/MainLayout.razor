@inherits LayoutComponentBase
@using OutlookBlazorTestApp2.Components.Pages.Shared
@using OutlookBlazorTestApp2.Services
@inject AuthStateService AuthService
@inject NavigationManager NavManager

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 auth">
            @if (AuthService.IsLoggedIn)
            {
                <span class="user-info">@AuthService.CurrentUserDisplayName</span>
                <button class="btn btn-link logout-btn" @onclick="Logout">Logout</button>
            }
            else
            {
                <button class="btn btn-link" @onclick="@(() => NavManager.NavigateTo("/login"))">Login</button>
            }
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    Something went wrong in the Add-In.
    <a href="" class="reload">Reload</a>
    <span class="dismiss">×</span>
</div>
@* Global Toast reference for showing notifications *@
<Toast @ref="ToastRef" />

@code {
    public Toast ToastRef { get; set; }  // This makes the Toast component globally accessible

    public MainLayout(Toast toastRef)
    {
        ToastRef = toastRef;
    }

    private async Task Logout()
    {
        await AuthService.SignOutAsync(); // server side sign out
        NavManager.NavigateTo("/Account/SignOutLocal", true); // Fixed: Use the injected NavigationManager instance
    }
}