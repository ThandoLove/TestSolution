{
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "Domain": "yourtenant.onmicrosoft.com",
    "TenantId": "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx",
    "ClientId": "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx",
    "CallbackPath": "/signin-oidc",
    "Scopes": "User.Read Mail.Read"
  },

  "SageX3": {
    "BaseUrl": "https://yourdomain.com/integration/sage",
    "Username": "api_user",
    "Password": "SuperSecurePassword123!",
    "ApiKey": "YOUR_SAGE_X3_API_KEY",
    "TimeoutSeconds": 60
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "SageX3": {
      "BaseUrl": "https://your-x3-server-url",
      "ApiUser": "YOUR_API_USER",
      "ApiPassword": "YOUR_PASSWORD",
      "Folder": "YOUR_SAGE_FOLDER",
      "ApiKey": "YOUR_SAGE_X3_API_KEY",
      "TimeoutSeconds": 60
    },
    
      "SageGateway": {
        "BasePath": "/integration/sage",
        "YActivityPath": "/yactivity", // gateway will forward to actual X3 path
        "AttachmentsPath": "/attachments",
        "DeepLinkBase": "https://sage-portal.mycompany.com/records" // used to open record in browser; change to your UI
      },
      "Logging": {
        "LogLevel": {
          "Default": "Information",
          "Microsoft": "Warning"
        }
      }
    },
  "AllowedHosts": "*"
}


